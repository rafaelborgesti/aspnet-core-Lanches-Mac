@using Lanches_Mac.Models
@model IEnumerable<Lanche>

<div><h2>Todos os lanches</h2></div>
<div class="row">
    @foreach (var lanche in Model)
    {
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="img-thumbnail">
            <p><img src="@lanche.ImagemUrl" class="rounded" alt="" /></p>
        </div>
        <div class="caption">
            <h3 class="pull-right">@lanche.Preco.ToString("c")</h3>
            <h3>Lanche: @lanche.Nome</h3>
            <p>@lanche.DescricaoCurta</p>
        </div>
    </div>
    }
</div>
